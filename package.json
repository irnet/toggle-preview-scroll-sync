{
    "name": "toggle-preview-scroll-sync",
    "displayName": "Toggle Preview Scroll Sync",
    "version": "1.0.1",
    "publisher": "kurioterno",
    "license": "MIT",
    "engines": {
      "vscode": "^1.80.0"
    },
    "activationEvents": [
      "onStartupFinished"
    ],
    "main": "./extension.js",
    "repository": {
      "type": "git",
      "url": "https://github.com/irnet/toggle-preview-scroll-sync.git"
    },
  "contributes": {
    "commands": [
      {
        "command": "toggleScrollSync.enable",
        "title": "Toggle Preview Scroll Sync (to ON)",
        "category": "Preview",
        "icon": "$(sync)"
      },
      {
        "command": "toggleScrollSync.disable",
        "title": "Toggle Preview Scroll Sync (to OFF)",
        "category": "Preview",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "toggleScrollSync.enable",
          "when": "toggleScrollSync.enabled == false"
        },
        {
          "command": "toggleScrollSync.disable",
          "when": "toggleScrollSync.enabled == true"
        }
      ],
      "editor/title": [
        {
          "command": "toggleScrollSync.enable",
          "when": "(resourceLangId == markdown || resourceLangId == html) && toggleScrollSync.enabled == false",
          "group": "navigation"
        },
        {
          "command": "toggleScrollSync.disable",
          "when": "(resourceLangId == markdown || resourceLangId == html) && toggleScrollSync.enabled == true",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "toggleScrollSync.enable",
          "when": "(resourceLangId == markdown || resourceLangId == html) && toggleScrollSync.enabled == false",
          "group": "1_modification"
        },
        {
          "command": "toggleScrollSync.disable",
          "when": "(resourceLangId == markdown || resourceLangId == html) && toggleScrollSync.enabled == true",
          "group": "1_modification"
        }
      ]
    }
  }
  }